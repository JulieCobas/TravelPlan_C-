@page
@model ProfilModel
@{
    ViewData["Title"] = "Client Profile";
    ViewData["ActivePage"] = ManageNavPages.Profil;
}

<style>
    .form-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-group {
        flex: 1 1 45%;
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input, .form-group select {
            padding: 10px;
            font-size: 1em;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group span.text-danger {
            margin-top: 5px;
        }

    .btn-primary {
        padding: 10px 20px;
        font-size: 1.2em;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
        margin-top: 20px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

<h2>Profil Client</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-container">
        <div class="form-group">
            <label asp-for="Client.Nom" class="control-label">Nom</label>
            <input asp-for="Client.Nom" class="form-control"/>
            <span asp-validation-for="Client.Nom" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Client.Prenom" class="control-label">Prénom</label>
            <input asp-for="Client.Prenom" class="form-control"/>
            <span asp-validation-for="Client.Prenom" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Client.Addresse" class="control-label">Adresse</label>
            <input asp-for="Client.Addresse" class="form-control"/>
            <span asp-validation-for="Client.Addresse" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Client.Ville" class="control-label"></label>
            <input asp-for="Client.Ville" class="form-control"/>
            <span asp-validation-for="Client.Ville" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Client.Cp" class="control-label">Code Postal</label>
            <input asp-for="Client.Cp" class="form-control"/>
            <span asp-validation-for="Client.Cp" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Client.Pays" class="control-label"></label>
            <input asp-for="Client.Pays" class="form-control"/>
            <span asp-validation-for="Client.Pays" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Date de naissance</label>
            <div>
                <select asp-for="Day" class="form-control" style="width: 30%; display: inline-block;">
                    @for (int day = 1; day <= 31; day++)
                    {
                        <option value="@day" selected="@(day == Model.Day)">@day</option>
                    }
                </select>
                <select asp-for="Month" class="form-control" style="width: 30%; display: inline-block;">
                    @for (int month = 1; month <= 12; month++)
                    {
                        <option value="@month" selected="@(month == Model.Month)">@month</option>
                    }
                </select>
                <select asp-for="Year" class="form-control" style="width: 35%; display: inline-block;">
                    @for (int year = DateTime.Now.Year; year >= DateTime.Now.Year - 100; year--)
                    {
                        <option value="@year" selected="@(year == Model.Year)">@year</option>
                    }
                </select>
            </div>
            <span asp-validation-for="Day" class="text-danger"></span>
            <span asp-validation-for="Month" class="text-danger"></span>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Sauvegarder</button>
</form>