@model IEnumerable<projet_csharp_travel_plan_frontend.DTO.TransportDTO>

@{
    ViewData["Title"] = "Transports";
    var selectedCountry = ViewData["SelectedCountry"] as string;
}

<h1>Transports en @selectedCountry</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.IdTransport)</th>
            <th>@Html.DisplayNameFor(model => model.CategorieTransportNom)</th>
            <th>@Html.DisplayNameFor(model => model.NomFournisseur)</th>
            <th>@Html.DisplayNameFor(model => model.Prix)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IdTransport)</td>
                <td>@Html.DisplayFor(modelItem => item.CategorieTransportNom)</td>
                <td>@Html.DisplayFor(modelItem => item.NomFournisseur)</td>
                <td>@Html.DisplayFor(modelItem => item.Prix)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdTransport" class="btn btn-info">Voir détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post" asp-action="ProceedToLodging">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-secondary">Passer à la réservation de logement sans sélectionner de transport</button>
</form>
