@model projet_csharp_travel_plan_frontend.DTO.TransportDTO

@{
    ViewData["Title"] = "Details";
    var voyageId = ViewData["VoyageId"] as int?;
}

<h1>Details</h1>

<div>
    <h4>Transport</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nom de la compagnie</dt>
        <dd class="col-sm-10">@Model.NomFournisseur</dd>
        <dt class="col-sm-2">Numéro du siège</dt>
        <dd class="col-sm-10">@Model.NumeroSiege</dd>
        <dt class="col-sm-2">Bagage à main</dt>
        <dd class="col-sm-10"><input type="checkbox" name="BagageMain" @(Model.BagageMain == true ? "checked" : "") /></dd>
        <dt class="col-sm-2">Bagage en soute</dt>
        <dd class="col-sm-10"><input type="checkbox" name="BagageEnSoute" @(Model.BagageEnSoute == true ? "checked" : "") /></dd>
        <dt class="col-sm-2">Bagage large</dt>
        <dd class="col-sm-10"><input type="checkbox" name="BagageLarge" @(Model.BagageLarge == true ? "checked" : "") /></dd>
        <dt class="col-sm-2">Speedyboarding</dt>
        <dd class="col-sm-10"><input type="checkbox" name="Speedyboarding" @(Model.Speedyboarding == true ? "checked" : "") /></dd>
        <dt class="col-sm-2">Prix</dt>
        <dd class="col-sm-10">@Model.Prix</dd>
    </dl>

    <form method="post" asp-action="ConfirmTransportSelection">
        @Html.AntiForgeryToken()
        <input type="hidden" name="IdTransport" value="@Model.IdTransport" />
        <input type="hidden" name="voyageId" value="@voyageId" />
        <div class="form-group">
            <label for="DateDebut">Date de début</label>
            <input type="date" class="form-control" id="DateDebut" name="DateDebut" required />
        </div>
        <div class="form-group">
            <label for="DateFin">Date de fin</label>
            <input type="date" class="form-control" id="DateFin" name="DateFin" required />
        </div>
        <button type="submit" class="btn btn-primary">Confirmer et passer à la réservation de logement</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>
