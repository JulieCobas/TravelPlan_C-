@model projet_csharp_travel_plan_frontend.Models.ErrorViewModel
@{
    ViewData["Title"] = "Erreur";
}

<h1 class="text-danger">Erreur</h1>
<h2 class="text-danger">Une erreur est survenue lors du traitement de votre demande.</h2>

@if (Model != null && !string.IsNullOrEmpty(Model.RequestId))
{
    <p>
        <strong>ID de la requête :</strong> <code>@Model.RequestId</code>
    </p>
}

<p>Nous sommes désolés, mais une erreur inattendue s'est produite. Veuillez réessayer plus tard ou contacter le support si le problème persiste.</p>

@if (Model != null && !string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>
        <strong>Détails de l'erreur :</strong> <code>@Model.ErrorMessage</code>
    </p>
}
