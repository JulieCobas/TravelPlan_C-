@model IEnumerable<projet_csharp_travel_plan_frontend.DTO.ReservationDTO>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Reservations</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">Nouvelle Réservation</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        @if (item.Logement != null)
                        {
                            <h5 class="card-title">@item.Logement.Nom</h5>
                            <p class="card-text">
                                <strong>Adresse:</strong> @item.Logement.Details<br />
                                <strong>Prix:</strong> @item.Logement.Details<br />
                                <strong>Note:</strong> @item.Logement.Note / 10<br />
                            </p>
                        }
                        else if (item.Activite != null)
                        {
                            <h5 class="card-title">@item.Activite.Nom</h5>
                            <p class="card-text">
                                <strong>Details:</strong> @item.Activite.Details<br />
                                <strong>Prix:</strong> @item.Activite.PrixActivite €<br />
                            </p>
                        }
                        else if (item.Transport != null)
                        {
                            <h5 class="card-title">@item.Transport.CategorieTransportNom</h5>
                            <p class="card-text">
                                <strong>Prix:</strong> @item.Transport.Prix €<br />
                            </p>
                        }
                        else
                        {
                            <h5 class="card-title">Voyage: @item.IdVoyage</h5>
                            <p class="card-text">Aucun détail disponible</p>
                        }
                        <a href="@Url.Action("Details", "Reservations", new { id = item.IdReservation })" class="btn btn-info btn-sm">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
