@model projet_csharp_travel_plan_frontend.DTO.LogementDTO

@{
    ViewData["Title"] = "Détails du Logement";
    var selectedCountry = ViewData["SelectedCountry"];
    var voyageId = ViewData["VoyageId"] as int? ?? 1; // Default to 1 if voyageId is null
}

<h1>@ViewData["Title"]</h1>

<p class="description">Veuillez remplir les différentes options demandées</p>

<div class="container">
    <div class="card mb-4 shadow-sm">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="/img/logement_test.jpg" class="card-img" alt="Image du logement">
            </div>
            <div class="col-md-8 d-flex flex-column">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(model => model.Nom)</h4>
                    <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(model => model.NomCategorie)</h6>
                    <p class="card-text"><strong>Fournisseur :</strong> @Html.DisplayFor(model => model.NomFournisseur)</p>
                    <p class="card-text"><strong>Description :</strong> @Html.DisplayFor(model => model.Details)</p>
                    <p class="card-text">
                        <strong>Note :</strong>
                        @for (var i = 1; i <= 10; i++)
                        {
                            <span class="fa fa-star @(i <= Model.Note ? "checked" : "")"></span>
                        }
                    </p>
                    <p class="card-text"><strong>Nombre d'évaluations :</strong> @Html.DisplayFor(model => model.NbEvaluation) avis</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="post" asp-action="ConfirmReservation">
                @Html.AntiForgeryToken()
                <input type="hidden" name="IdLogement" value="@Model.IdLogement" />
                <input type="hidden" name="VoyageId" value="@voyageId" />
                <div class="form-group">
                    <label for="DateDebut">Date arrivée</label>
                    <input type="date" class="form-control" id="DateDebut" name="DateDebut" required />
                </div>
                <div class="form-group">
                    <label for="DateFin">Date de départ</label>
                    <input type="date" class="form-control" id="DateFin" name="DateFin" required />
                </div>
                <div class="form-group row mt-4">
                    <div class="col-sm-6">
                        <a asp-action="Index" asp-route-country="@selectedCountry" asp-route-voyageId="@voyageId" class="btn btn-danger btn-block">Retour à la liste des logements</a>
                    </div>
                    <div class="col-sm-6 text-right">
                        <button type="submit" class="btn btn-primary">Confirmer la réservation</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function () {
            var today = new Date().toISOString().split('T')[0];
            var dateDebutInput = document.getElementById('DateDebut');
            var dateFinInput = document.getElementById('DateFin');

            dateDebutInput.setAttribute('min', today);
            dateFinInput.setAttribute('min', today);

            dateDebutInput.addEventListener('change', function () {
                dateFinInput.setAttribute('min', this.value);
            });

            dateFinInput.addEventListener('change', function () {
                if (dateFinInput.value < dateDebutInput.value) {
                    dateFinInput.value = dateDebutInput.value;
                }
            });
        });
    </script>
}


<style>
    .card {
        border-radius: 10px;
        border: none;
    }

    .card-img {
        border-radius: 10px 0 0 10px;
        object-fit: cover;
        height: 100%;
        border: 2px solid grey;
    }

    .card-title {
        font-weight: bold;
    }

    .card-subtitle {
        font-size: 14px;
        color: #6c757d;
    }

    .card-text {
        margin-bottom: 10px;
    }

    .fa-star.checked {
        color: orange;
    }

    .container .card:first-child {
        margin-top: 40px;
    }

    .form-check-label {
        margin-left: 5px;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-primary {
        background-color: #337ab7;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #23527c;
        }
</style>
