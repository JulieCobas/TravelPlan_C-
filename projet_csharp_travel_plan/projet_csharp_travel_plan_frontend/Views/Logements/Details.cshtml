@model projet_csharp_travel_plan_frontend.Models.Logement

@{
    ViewData["Title"] = "Détails du Logement";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Nom du Logement: @Model.Nom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fournisseur
        </dt>
        <dd class="col-sm-10">
            @Model.IdFournisseurNavigation?.NomCompagnie <!-- Affiche le nom du fournisseur, si disponible -->
        </dd>
        <dt class="col-sm-2">
            Catégorie
        </dt>
        <dd class="col-sm-10">
            @Model.IdLogementCategorieNavigation?.Nom <!-- Affiche le nom de la catégorie de logement, si disponible -->
        </dd>
        <dt class="col-sm-2">
            Pays
        </dt>
        <dd class="col-sm-10">
            @Model.IdPaysNavigation?.Nom <!-- Affiche le nom du pays, si disponible -->
        </dd>
        <dt class="col-sm-2">
            Détails
        </dt>
        <dd class="col-sm-10">
            @Model.Details
        </dd>
        <dt class="col-sm-2">
            Note
        </dt>
        <dd class="col-sm-10">
            @Model.Note
        </dd>
        <dt class="col-sm-2">
            Nombre d'évaluations
        </dt>
        <dd class="col-sm-10">
            @Model.NbEvaluation
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <!-- Vous devez décider comment afficher l'image -->
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdLogement">Modifier</a> |
    <a asp-action="Index">Retour à la Liste</a>
</div>
