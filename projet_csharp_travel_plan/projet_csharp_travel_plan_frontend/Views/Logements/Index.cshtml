@model IEnumerable<projet_csharp_travel_plan_frontend.DTO.LogementDTO>

@{
    ViewData["Title"] = "Liste des Logements";
}

<h1>@ViewData["Title"]</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nom du Logement</th>
                <th>Fournisseur</th>
                <th>Catégorie</th>
                <th>Pays</th>
                <th>Détails</th>
                <th>Note</th>
                <th>Nombre d'évaluations</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nom</td>
                    <td>@item.NomFournisseur</td>
                    <td>@item.NomCategorie</td>
                    <td>@item.NomPays</td>
                    <td>@item.Details</td>
                    <td>@item.Note</td>
                    <td>@item.NbEvaluation</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Voir détails</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Aucun logement disponible.</p>
}
