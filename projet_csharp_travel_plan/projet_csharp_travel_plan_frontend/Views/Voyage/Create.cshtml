@model projet_csharp_travel_plan_frontend.DTO.VoyageDTO

@{
    ViewData["Title"] = "Nouveau Voyage";
}

<h1>Nouveau Voyage</h1>

<br />
<form id="voyageForm" asp-action="Create" asp-controller="Voyage" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date d'arrivée</label>
        <div class="col-sm-10">
            <input type="date" asp-for="DateDebut" class="form-control" />
            <div class="invalid-feedback" data-name="DateDebut"></div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date de départ</label>
        <div class="col-sm-10">
            <input type="date" asp-for="DateFin" class="form-control" />
            <div class="invalid-feedback" data-name="DateFin"></div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Où allez-vous ?</label>
        <div class="col-sm-10">
            <select id="paysSelect" asp-for="IdPays" class="form-select" aria-label="Sélectionner un pays">
                <option value="">Sélectionnez un pays</option>
                @if (Model.Pays != null)
                {
                    @foreach (var pays in Model.Pays)
                    {
                        <option value="@pays.IdPays">@pays.Nom</option>
                    }
                }
            </select>
            <div class="invalid-feedback" data-name="IdPays"></div>
        </div>
    </div>

    <br />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Soumettre</button>
        <a asp-action="Index" asp-controller="Voyage" class="btn btn-secondary">Annuler</a>
    </div>
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var form = document.getElementById('voyageForm');
        if (form) {
            form.addEventListener('submit', function (event) {

                event.preventDefault(); // Empêche l'envoi du formulaire pour l'instant

                // Supprimer les classes is-invalid pour les champs
                form.querySelectorAll('.is-invalid').forEach(function (element) {
                    element.classList.remove('is-invalid');
                });

                // Récupérez les valeurs des champs du formulaire
                var dateDebut = document.querySelector('[name="DateDebut"]').value;
                var dateFin = document.querySelector('[name="DateFin"]').value;
                var selectedPayId = document.querySelector('[name="IdPays"]').value;
                var selectedPayText = document.querySelector('[name="IdPays"] option:checked').text;

                // Validation : Vérifier si les champs dates sont vides
                if (!dateDebut || !dateFin ) {
                    document.querySelector('[name="DateDebut"]').classList.add('is-invalid');
                    document.querySelector('[data-name="DateDebut"]').textContent = "Veuillez remplir tous les champs du formulaire.";
                    document.querySelector('[name="DateFin"]').classList.add('is-invalid');
                    document.querySelector('[data-name="DateFin"]').textContent = "Veuillez remplir tous les champs du formulaire.";
                    return; // Arrêtez l'exécution si un champ est vide
                }

                // Validation : Vérifier si les dates sont dans le passé
                var currentDate = new Date();
                if (new Date(dateDebut) < currentDate || new Date(dateFin) < currentDate) {
                    document.querySelector('[name="DateDebut"]').classList.add('is-invalid');
                    document.querySelector('[data-name="DateDebut"]').textContent = "Les dates ne peuvent pas être dans le passé.";
                    document.querySelector('[name="DateFin"]').classList.add('is-invalid');
                    document.querySelector('[data-name="DateFin"]').textContent = "Les dates ne peuvent pas être dans le passé.";
                    return; // Arrêtez l'exécution si une date est dans le passé
                }

                // Validation : Vérifier si la date de fin est postérieure à la date de début
                if (new Date(dateFin) <= new Date(dateDebut)) {
                    document.querySelector('[name="DateFin"]').classList.add('is-invalid');
                    document.querySelector('[data-name="DateFin"]').textContent = "La date de fin doit être postérieure à la date de début.";
                    return; // Arrêtez l'exécution si la date de fin est inférieure ou égale à la date de début
                }

                // Validation : Vérifier si un pays a été sélectionné
                if (selectedPayId === "") {
                    document.querySelector('[name="IdPays"]').classList.add('is-invalid');
                    document.querySelector('[data-name="IdPays"]').textContent = "Veuillez sélectionner un pays.";
                    return; // Arrêtez l'exécution si aucun pays n'a été sélectionné
                }

                // Stockez les données dans un objet JavaScript
                var formData = {
                    DateDebut: dateDebut,
                    DateFin: dateFin,
                    IdPays: selectedPayId,
                    SelectedPayText: selectedPayText
                };

                // Affichez les valeurs dans la console
                console.log("Date de Début:", dateDebut);
                console.log("Date de Fin:", dateFin);
                console.log("Pays Sélectionné:", selectedPayId);
                console.log("Pays Sélectionné Nom:", selectedPayText);

                // Si toutes les validations passent, envoyez le formulaire
                form.submit();

                // Redirection après la soumission du formulaire
                window.location.href = '@Url.Action("Create", "Reservations")' + '?dateDebut=' + formData.DateDebut + '&dateFin=' + formData.DateFin + '&selectedPayId=' + formData.IdPays + '&selectedPayText=' + formData.SelectedPayText;

            });
        } else {
            console.error("Form with ID 'voyageForm' not found.");
        }
    });
</script>

