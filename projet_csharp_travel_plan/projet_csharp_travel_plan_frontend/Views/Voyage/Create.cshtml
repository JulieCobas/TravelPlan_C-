@model projet_csharp_travel_plan_frontend.DTO.VoyageDTO

@{
    ViewData["Title"] = "Nouveau Voyage";
}

<h1>Nouveau Voyage</h1>

<br />
<form id="voyageForm" asp-action="Create" asp-controller="Voyage" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date d'arrivée</label>
        <div class="col-sm-10">
            <input type="date" asp-for="DateDebut" class="form-control" />
            <span asp-validation-for="DateDebut" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date de départ</label>
        <div class="col-sm-10">
            <input type="date" asp-for="DateFin" class="form-control" />
            <span asp-validation-for="DateFin" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Où aller-vous ?</label>
        <div class="col-sm-10">
            <select id="paysSelect" asp-for="IdPays" class="form-select" aria-label="Sélectionner un pays">
                <option value="">Sélectionnez un pays</option>
                @if (Model.Pays != null)
                {
                    @foreach (var pays in Model.Pays)
                    {
                        <option value="@pays.IdPays">@pays.Nom</option>
                    }
                }
            </select>
            <span asp-validation-for="IdPays" class="text-danger"></span>
        </div>
    </div>

    <br />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Soumettre</button>
        <a asp-action="Index" asp-controller="Voyage" class="btn btn-secondary">Annuler</a>
    </div>
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var form = document.getElementById('voyageForm');
        if (form) {
            form.addEventListener('submit', function (event) {

                event.preventDefault(); // Empêche l'envoi du formulaire pour l'instant

                // Récupérez les valeurs des champs du formulaire
                var dateDebut = document.querySelector('[name="DateDebut"]').value;
                var dateFin = document.querySelector('[name="DateFin"]').value;
                var selectedPayId = document.querySelector('[name="IdPays"]').value;
                var selectedPayText = document.querySelector('[name="IdPays"] option:checked').text;

                // Stockez les données dans un objet JavaScript
                var formData = {
                    DateDebut: dateDebut,
                    DateFin: dateFin,
                    IdPays: selectedPayId,
                    SelectedPayText: selectedPayText
                };

                // Affichez les valeurs dans la console
                console.log("Date de Début:", dateDebut);
                console.log("Date de Fin:", dateFin);
                console.log("Pays Sélectionné:", selectedPayId);
                console.log("Pays Sélectionné Nom:", selectedPayText);

                // Redirection après la soumission du formulaire
                window.location.href = '@Url.Action("Create", "Reservations")' + '?dateDebut=' + formData.DateDebut + '&dateFin=' + formData.DateFin + '&selectedPayId=' + formData.IdPays + '&selectedPayText=' + formData.SelectedPayText;

            });
        } else {
            console.error("Form with ID 'voyageForm' not found.");
        }
    });
</script>

