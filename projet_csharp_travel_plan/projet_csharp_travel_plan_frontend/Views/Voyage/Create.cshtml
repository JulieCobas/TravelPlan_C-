@model projet_csharp_travel_plan_frontend.DTO.VoyageDTO

@{
    ViewData["Title"] = "Nouveau Voyage";
}

<h1>Nouveau Voyage</h1>

<p class="description">Vous vous trouvez ici à l'aube d'un nouveau voyage ! Veuillez remplir les informations ci-dessous pour créer un nouveau voyage. Assurez-vous que toutes les données sont correctes et à jour avant de soumettre le formulaire.</p>

<form id="voyageForm" asp-action="CreatePost" asp-controller="Voyage" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date d'arrivée</label>
        <div class="col-sm-10">
            <input type="date" asp-for="DateDebut" class="form-control" />
            <div class="invalid-feedback" data-name="DateDebut"></div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date de départ</label>
        <div class="col-sm-10">
            <input type="date" asp-for="DateFin" class="form-control" />
            <div class="invalid-feedback" data-name="DateFin"></div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Où allez-vous ?</label>
        <div class="col-sm-10">
            <select id="paysSelect" asp-for="IdPays" class="form-select" aria-label="Sélectionner un pays">
                <option value="" selected disabled>Sélectionnez un pays</option>
                @if (ViewBag.Pays != null)
                {
                    @foreach (var pays in ViewBag.Pays)
                    {
                        <option value="@pays.IdPays">@pays.Nom</option>
                    }
                }
            </select>
            <div class="invalid-feedback" data-name="IdPays"></div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-6">
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger btn-block">Annuler</a>
        </div>
        <div class="col-sm-6 text-right">
            <button type="submit" class="btn btn-primary">Soumettre</button>
        </div>
    </div>
</form>

