@model projet_csharp_travel_plan_frontend.DTO.VoyageDTO

@{
    ViewData["Title"] = "Nouveau Voyage";
}

<h1>Nouveau Voyage</h1>

<p class="description">Vous vous trouvez ici à l'aube d'un nouveau voyage ! Veuillez remplir les informations ci-dessous pour créer un nouveau voyage. Assurez-vous que toutes les données sont correctes et à jour avant de soumettre le formulaire.</p>

<form id="voyageForm" asp-action="CreatePost" asp-controller="Voyage" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date d'arrivée</label>
        <div class="col-sm-10">
            <input type="date" asp-for="DateDebut" class="form-control" id="dateDebut" />
            <div class="invalid-feedback" id="dateDebutError"></div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date de départ</label>
        <div class="col-sm-10">
            <input type="date" asp-for="DateFin" class="form-control" id="dateFin" />
            <div class="invalid-feedback" id="dateFinError"></div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Où allez-vous ?</label>
        <div class="col-sm-10">
            <select id="paysSelect" asp-for="IdPays" class="form-select" aria-label="Sélectionner un pays">
                <option value="" selected disabled>Sélectionnez un pays</option>
                @if (ViewBag.Pays != null)
                {
                    @foreach (var pays in ViewBag.Pays)
                    {
                        <option value="@pays.IdPays">@pays.Nom</option>
                    }
                }
            </select>
            <div class="invalid-feedback" id="paysSelectError"></div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-6">
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger btn-block">Annuler</a>
        </div>
        <div class="col-sm-6 text-right">
            <button type="submit" class="btn btn-primary">Soumettre</button>
        </div>
    </div>
</form>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
    }

    h1 {
        color: #333;
        margin-top: 20px;
        margin-bottom: 20px;
        font-weight: bold;
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
    }

    .form-select {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
    }

    label {
        font-weight: bold;
        margin-bottom: 10px;
        text-align: left;
    }

    .invalid-feedback {
        color: red;
        font-size: 12px;
        margin-top: 5px;
        display: none; /* Initially hidden */
    }

    .form-control.is-invalid,
    .form-select.is-invalid {
        border-color: red;
    }

    .description {
        text-align: center;
    }

    #voyageForm {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        #voyageForm .form-group.row {
            margin-bottom: 20px;
        }

        #voyageForm .col-sm-2 {
            text-align: right;
            padding-right: 20px;
        }

        #voyageForm .col-sm-10 {
            padding-left: 20px;
        }

        #voyageForm .btn-danger {
            background-color: #dc3545;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            #voyageForm .btn-danger:hover {
                background-color: #c82333;
            }

        #voyageForm .btn-primary {
            background-color: #337ab7;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            #voyageForm .btn-primary:hover {
                background-color: #23527c;
            }
</style>

<script>
    document.getElementById('voyageForm').addEventListener('submit', function (event) {
        let valid = true;

        // Clear previous error messages and remove error styles
        document.getElementById('dateDebutError').innerText = '';
        document.getElementById('dateDebutError').style.display = 'none';
        document.getElementById('dateFinError').innerText = '';
        document.getElementById('dateFinError').style.display = 'none';
        document.getElementById('dateDebut').classList.remove('is-invalid');
        document.getElementById('dateFin').classList.remove('is-invalid');

        // Get the date values
        const dateDebut = document.getElementById('dateDebut').value;
        const dateFin = document.getElementById('dateFin').value;
        const today = new Date().toISOString().split('T')[0]; // Get today's date in yyyy-mm-dd format

        // Check if DateDebut is in the past
        if (dateDebut && dateDebut < today) {
            document.getElementById('dateDebutError').innerText = 'La date d\'arrivée ne peut pas être dans le passé.';
            document.getElementById('dateDebutError').style.display = 'block';
            document.getElementById('dateDebut').classList.add('is-invalid');
            valid = false;
        }

        // Check if DateFin is before DateDebut
        if (dateFin && dateDebut && dateFin < dateDebut) {
            document.getElementById('dateFinError').innerText = 'La date de départ ne peut pas être antérieure à la date d\'arrivée.';
            document.getElementById('dateFinError').style.display = 'block';
            document.getElementById('dateFin').classList.add('is-invalid');
            valid = false;
        }

        // If not valid, prevent form submission
        if (!valid) {
            event.preventDefault();
        }
    });
</script>
