@model IEnumerable<projet_csharp_travel_plan_frontend.DTO.VoyageDTO>

@{
    ViewData["Title"] = "Voyages en cours";
    var paysList = ViewBag.Pays as List<projet_csharp_travel_plan_frontend.DTO.PayDTO>;
}

<h1>Voyages en cours</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date de Début</th>
            <th>Date de Fin</th>
            <th>Pays</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var voyage in Model)
        {
            <tr>
                <td>@voyage.DateDebut.ToString("yyyy-MM-dd")</td>
                <td>@voyage.DateFin.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (paysList != null && paysList.Count > 0)
                    {
                        <ul>
                            @foreach (var pays in paysList)
                            {
                                <li>@pays.Nom</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Pas de pays disponible</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
