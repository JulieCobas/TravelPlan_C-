@model projet_csharp_travel_plan_frontend.DTO.VoyageDTO

@{
    ViewData["Title"] = "Voyage";
}

<h1>Informations de Voyage</h1>

<div>
    <h4>Voyage</h4>
    <hr />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date de Début</label>
        <div class="col-sm-10">
            <input type="text" value="@Model.DateDebut" class="form-control" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date de Fin</label>
        <div class="col-sm-10">
            <input type="text" value="@Model.DateFin" class="form-control" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Pays</label>
        <div class="col-sm-10">
            <select class="form-control" disabled>
                @foreach (var pays in Model.Pays)
                {
                    <option>@pays.Nom</option>
                }
            </select>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Retour à l'accueil</a>
</div>